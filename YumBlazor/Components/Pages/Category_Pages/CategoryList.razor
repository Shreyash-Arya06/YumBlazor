@page "/category"
@inject ICategoryRepository _categoryRepository

<PageTitle>Category</PageTitle>

@if (IsProcessing)
{
	<div class="position-absolute w-75 h-75 d-flex flex-column align-items-center bg-white justify-content-center">
		<img src="/images/loading.gif" alt="loading..." />
	</div>
}
else
{
	<div class="card shadow border-0 mt-4">
		<div class="card-header bg-black bg-gradient ms-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2">Category List</h2>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<div class="row pb-3">
				<div class="col-12 text-end">
					<button class="btn btn-secondary btn-lg" style="width:250px;">Add New Category</button>
				</div>
			</div>
			
			@if (Categories.Any())
			{
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var obj in Categories)
						{
							<tr>
								<td>@obj.Name</td>
								<td>
									Buttons
								</td>
							</tr>
						}
					</tbody>
				</table>
			}
		</div>
	</div>
}

@code {
	private bool IsProcessing { get; set; } = true;
	private IEnumerable<Category> Categories { get; set; } = new List<Category>();

	// This is great way to fetch data, but manytime blazor randors on server and again on client,
	// so OnInitializedAsync will be called twice. In global server there is no issue, but in particular 
	// page server setup, OnInitializedAsync may be called again, which is not ideal.
	// So better to use OnAfterRenderAsync with a flag to check first render.
	// protected override async Task OnInitializedAsync()
	// {
	// 	IsProcessing = true;
	// // 	await Task.Delay(2000);
	// // 	await Task.Yield();
	// 	await LoadCategories();
	// 	IsProcessing = false;
	// }

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			// if IsProcessing is initally true, then no need of below 2 statements
			// IsProcessing = true;
			// StateHasChanged(); Notify UI to show loading state
			await LoadCategories();
			IsProcessing = false;
			StateHasChanged(); // Notify UI to update with loaded data
		}
	}
	private async Task LoadCategories()
	{
		// Thread.Sleep(3000); Simulate a delay
		Categories = await _categoryRepository.GetAllAsync();
	}
}
